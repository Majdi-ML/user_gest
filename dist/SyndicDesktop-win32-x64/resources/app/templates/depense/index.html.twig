{% extends 'base.html.twig' %}

{% block title %}Depense index{% endblock %}

{% block body %}
    <h1>Depense index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Montant</th>
                <th>Date_depense</th>
                <th>Description</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depense in depenses %}
            <tr>
                <td>{{ depense.id }}</td>
                <td>{{ depense.montant }}</td>
                <td>{{ depense.dateDepense ? depense.dateDepense|date('Y-m-d') : '' }}</td>
                <td>{{ depense.description }}</td>
                <td>{{ depense.type }}</td>
                <td>
                    <a href="{{ path('app_depense_show', {'id': depense.id}) }}">show</a>
                    <a href="{{ path('app_depense_edit', {'id': depense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_depense_new') }}">Create new</a>
{% endblock %}
