{% extends 'base.html.twig' %}

{% block title %}Liste des Documents{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">ðŸ“‚ Liste des Documents</h1>

    <div class="mb-3 text-end">
        <a href="{{ path('app_papier_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un document
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for papier in papiers %}
                <tr>
                    <td>{{ papier.id }}</td>
                    <td>{{ papier.typePapier ? papier.typePapier.libelle : 'â€”' }}</td>
                    <td>{{ papier.Description|u.truncate(50, '...') }}</td>
                    <td>{{ papier.dateCreation ? papier.dateCreation|date('d/m/Y') : '' }}</td>
                    <td>
                        {% if papier.AttachedFile %}
                            <span class="badge bg-success">Fichier joint</span>
                        {% else %}
                            <span class="badge bg-secondary">Aucun fichier</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_papier_show', {'id': papier.id}) }}" class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_papier_edit', {'id': papier.id}) }}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucun document trouvÃ©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}